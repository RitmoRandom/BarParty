<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarParty.Views.tagsNew"
             Title="Tag">
    <ScrollView>
        <VerticalStackLayout>
            <StackLayout>
                <Button x:Name="guardar" Text="Guardar" Clicked="Save" VerticalOptions="Start" HorizontalOptions="End" Margin="0,5,10,20" FontSize="20"/>
                <Entry x:Name="Nombre" Placeholder="Nombre" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" FontSize="20" Margin="0,0,0,20"/>
                <Label HorizontalOptions="Center" FontSize="20" FontAttributes="Bold">Tipo:</Label>
                <Picker x:Name="Tipo" Title="Selecciona un Tipo" SelectedIndexChanged="Picker_Tipo" FontSize="20" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" WidthRequest="200"/>

            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>